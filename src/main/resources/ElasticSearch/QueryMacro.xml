    <guid>a7173938-11f3-4fe1-80dd-75c9e28610b3</guid>
    <property>
      <code>{{groovy}}
  def server = xcontext.macro.params.server;
  def model = evaluate(xcontext.macro.params.model);
  def key = xcontext.macro.params.key;
  def reverse = xcontext.macro.params.reverse;
  def query = xcontext.macro.content;
  def es = xwiki.parseGroovyFromPage("ElasticSearch.Groovy");
  es.setServerURL(server)
  def data = es.getData(query);
  def result = es.showBucketsData(data, model, key, reverse=="true")
  if (result!=null) 
    println result
  else
    println "Error running query";
  if (request.debug || result==null)
   println es.debugStr;
{{/groovy}}
</code>
